@page
@model BonusPointManager.Pages.Flights.Airports.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <hr />
    <h4>Airport</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Airport.Country)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Airport.Country)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Airport.IataCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Airport.IataCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Airport.IcaoCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Airport.IcaoCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Airport.LatitudeDeg)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Airport.LatitudeDeg)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Airport.LongitudeDeg)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Airport.LongitudeDeg)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Airport.ElevationFt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Airport.ElevationFt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Airport.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Airport.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Airport.RunwayCount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Airport.RunwayCount)
        </dd>
    </dl>
    <hr />
    <h4>Runways</h4>
    <hr />
    @if(Model.Airport.RunwayCount > 0)
    {
        foreach (var runway in Model.Airport.Runways.ToList())
        {
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.Raw("Name")
                </dt>
                <dd class="col-sm-10">
                    @Html.Raw(runway.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.Raw("Length / Width (m)")
                </dt>
                <dd class="col-sm-10">
                    @Html.Raw(runway.LengthM + " / " + runway.WidthM)
                </dd>
                <dt class="col-sm-2">
                    @Html.Raw("Length / Width (ft)")
                </dt>
                <dd class="col-sm-10">
                    @Html.Raw(runway.LengthFt + " / " + runway.WidthFt)
                </dd>
                <dt class="col-sm-2">
                    @Html.Raw("Heading 1")
                </dt>
                <dd class="col-sm-10">
                    @Html.Raw(runway.RunwayHeadings[0].Name + " / " + runway.RunwayHeadings[0].HeadingDeg)
                </dd>
                <dt class="col-sm-2">
                    @Html.Raw("H1 Disp. Threshold (m/ft)")
                </dt>
                <dd class="col-sm-10">
                    @Html.Raw(runway.RunwayHeadings[0].DisplacedThresholdM + " / " + runway.RunwayHeadings[0].DisplacedThresholdFt)
                </dd>
                <dt class="col-sm-2">
                    @Html.Raw("Heading 2")
                </dt>
                <dd class="col-sm-10">
                    @Html.Raw(runway.RunwayHeadings[1].Name + " / " + runway.RunwayHeadings[1].HeadingDeg)
                </dd>
            </dl>
        }
    }
 
 

</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Airport?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
