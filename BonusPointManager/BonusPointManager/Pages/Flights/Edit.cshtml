@page
@model BonusPointManager.Pages.Flights.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Flight</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Flight.Id" />
            <div class="form-group">
                <label asp-for="Flight.FlightNumber" class="control-label"></label>
                <input asp-for="Flight.FlightNumber" class="form-control" />
                <span asp-validation-for="Flight.FlightNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Flight.DepartureTimeUtc" class="control-label"></label>
                <input asp-for="Flight.DepartureTimeUtc" class="form-control" />
                <span asp-validation-for="Flight.DepartureTimeUtc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Flight.ArrivalTimeUtc" class="control-label"></label>
                <input asp-for="Flight.ArrivalTimeUtc" class="form-control" />
                <span asp-validation-for="Flight.ArrivalTimeUtc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
